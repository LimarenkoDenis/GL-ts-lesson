{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "amd",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["HW*/**/*.ts"]
}
